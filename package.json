{
  "name": "@carauktion/component-library",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "*.css"
  ],
  "scripts": {
    "dev": "storybook dev -p 6006",
    "build": "vite build",
    "build:watch": "vite build --watch",
    "precommit": "yarn build && git add dist/",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "format": "prettier --write .",
    "changeset": "changeset",
    "version-packages": "changeset version && yarn install",
    "release": "changeset publish",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "postinstall": "test -f patches/react-tailwindcss-datepicker+1.5.1.patch && patch-package || echo 'No patches to apply'"
  },
  "peerDependencies": {
    "react": ">=19",
    "react-dom": ">=19"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.8",
    "@storybook/addon-docs": "8.4.7",
    "@storybook/react-vite": "8.4.7",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/react": "^16.0.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "patch-package": "^8.0.1",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "sass": "^1.93.2",
    "storybook": "8.4.7",
    "tailwindcss": "^3.4.12",
    "typescript": "^5.6.3",
    "vite": "^5.4.8",
    "vite-plugin-dts": "^4.2.3",
    "vitest": "^2.1.3"
  },
  "engines": {
    "node": "22"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.9",
    "@heroicons/react": "^2.2.0",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@testing-library/dom": "^10.4.1",
    "classnames": "^2.5.1",
    "dayjs": "^1.11.18",
    "framer-motion": "^12.23.22",
    "react-loading-skeleton": "^3.5.0",
    "react-tailwindcss-datepicker": "1.5.1",
    "react-use-measure": "^2.1.7",
    "tailwind-merge": "^3.3.1"
  }
}
